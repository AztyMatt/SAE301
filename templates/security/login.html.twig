{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block H1 %}{% endblock %}
{% block content %}
<form method="post">
    <h2>Connection</h2>
    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="input">
        <div class="flex-space-between">
            <label for="inputEmail">Email :</label><div id="message"></div>
        </div>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre adresse email" required autofocus>
    </div>

    <div class="input">
        <div class="flex-space-between">
            <label for="inputPassword">Mot de passe :</label>
        </div>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {% if error %}
        <div class="color-red p-mini">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <input class="bouton" type="submit" value="Se connecter">
</form>
{% endblock %}
