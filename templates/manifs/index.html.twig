{% extends 'base.html.twig' %}
{% block javascripts %}<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>{% endblock %}

{% block title %}Manifestations{% endblock %}

{% block body %}
    <h1>Les manifestations :</h1>

    <form name="search" type="GET">
        <input type="search" name="search-input" />
        <span class="material-icons" aria-hidden="true" data-icon="&#xe000;" onclick="search.submit()">search</span>
    </form>

    {% for manifestation in manifs %}
        <div>
            <img src="{{ asset('images/' ~ manifestation.getManifAffiche()) }}" alt="Affiche de '{{ manifestation.getManifTitre() }}'"/>
            <h2>{{ manifestation.getManifTitre() }}</h2>
            <p>{{ manifestation.getManifGenre() }}</p>
            <p>{{ manifestation.getManifDate()|date('d-m-Y') }}</p>
        </div>
    {% endfor %}
{% endblock %}